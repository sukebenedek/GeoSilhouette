<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GeoSilhouette.Pages.GamePage"
             Title="Try to guess the country!">



    <VerticalStackLayout>
        <Grid
            RowDefinitions="Auto,Auto,*"
            Padding="20"
            RowSpacing="20">

            <!-- ROUND COUNTER --><!--
            <HorizontalStackLayout Grid.Row="0"
                    HorizontalOptions="Center">
                <Label
                    Text="Round"
                    FontSize="36"
                    FontAttributes="Bold"
                    HorizontalOptions="Center"/>

                <Label
                    Text="0/5"
                    WidthRequest="90"
                    FontSize="36"
                    FontAttributes="Bold, Italic"
                    Padding="10, 0, 10, 0"
                    HorizontalOptions="Center"/>
            </HorizontalStackLayout>-->

            <!-- IMAGE CARD -->


            <Frame
                Grid.Row="0"
                Padding="10, 15"
                CornerRadius="16"
                HasShadow="True"
                    HorizontalOptions="Fill"
                    HeightRequest="250">

                <Image
                    Source="{Binding ChosenOne.SilhouetteImage}"
                    Aspect="AspectFit"/>
            </Frame>

            <!-- DROPDOWN / PICKER -->
            <Border
                Grid.Row="1"
                Padding="10">

                <VerticalStackLayout>

                    <!--<SearchBar
                        x:Name="searchBar"
                            SearchCommand="{Binding PerformSearch}"
                            SearchCommandParameter="{Binding Text, x:DataType='SearchBar', Source={x:Reference searchBar}}"
                        />-->
                    <Grid
                        ColumnDefinitions="*,Auto"
                        ColumnSpacing="10">

                        <Entry
                            Grid.Column="0"
                            Placeholder="Filter for country"
                            Text="{Binding FilterText}"
                            />

                        <Button
                            Grid.Column="1"
                            Text="Guess"
                            FontSize="20"
                            WidthRequest="120"
                            Command="{Binding GuessCommand}"
                            />

                    </Grid>


                    <Picker
                        Title="Select a country"
                        ItemsSource="{Binding SelectableCountries}"
                        ItemDisplayBinding="{Binding realName}"
                        SelectedItem="{Binding SelectedCountry, Mode=TwoWay}"/>

                </VerticalStackLayout>

            </Border>

            <!-- ANSWERS LIST -->
            <Border Padding="10"
                    HeightRequest="330"
                    Grid.Row="2">
                <ScrollView Padding="10">

                    <VerticalStackLayout x:Name="DirectionsContainer">

                        <VerticalStackLayout HeightRequest="49"
                                Spacing="0">
                            <Label
                                Text="A coutry will apper here"
                                VerticalTextAlignment="Center"
                                FontAttributes="Bold"
                                FontSize="18"/>

                            <Label
                                Text="And a leading direction here"
                                Margin="16,0,0,100"
                                VerticalTextAlignment="Center"
                                FontAttributes="Bold"
                                FontSize="18"
                                TextColor="Gray"/>
                        </VerticalStackLayout>
                        <!--<VerticalStackLayout HeightRequest="50"
                                Spacing="0">
                            <Label
                                Text="Mexico"
                                VerticalTextAlignment="Center"
                                FontAttributes="Bold"
                                FontSize="18"/>

                            <Label
                                Text="North East"
                                Margin="16,0,0,100"
                                VerticalTextAlignment="Center"
                                FontAttributes="Bold"
                                FontSize="18"
                                TextColor="Red"/>
                        </VerticalStackLayout>-->
                        
                    </VerticalStackLayout>
                </ScrollView>
            </Border>
        </Grid>
    </VerticalStackLayout>
</ContentPage>