<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="GeoSilhouette.Pages.ChosePage"
    Title="">

    <ScrollView>
        <Grid
            Padding="20"
            RowDefinitions="Auto, Auto, *,*,*"
            ColumnDefinitions="*">
            <Label
                Text="Chose a difficulty!"
                HorizontalOptions="Center"
                FontAttributes="Bold"
                Margin="0, 30, 0, 0"
                FontSize="35"
            />
            <Grid Grid.Row="1" HeightRequest="100" />
            <Button Text="Newborn Infant" Grid.Row="2" HeightRequest="80"
                Command="{Binding ChoseCommand}"
                CommandParameter="easy" />

            <Button Text="Medium" Grid.Row="3" HeightRequest="80"
                Command="{Binding ChoseCommand}"
                CommandParameter="medium" />

            <Button Text="Violent Agonizing Death" Grid.Row="4" HeightRequest="80"
                Command="{Binding ChoseCommand}"
                CommandParameter="hard" />


        </Grid>
    </ScrollView>
</ContentPage>